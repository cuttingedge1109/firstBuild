pipeline {
    agent {
        kubernetes {
        label "pipeline-java"
        yaml """
kind: Pod
metadata:
  name: jenkins-slave
spec:
  containers:
  - args: 
    - name: java-pipeline
    image: maven:3.3.3
    imagePullPolicy: Always
    tty: true                    
  restartPolicy: Never                
"""
        }
    }
    stages {
        stage('build') {
            steps {
                sh 'mvn --version'
            }
        }
    }
}
