node("any") {
    docker.withRegistry('https://cloud.docker.com/u/jamescarl20190101/repository/docker/jamescarl20190101/test-fullstacksys', 'Dockerhub') {
    
        git url: "https://github.com/jamescarl20190101/firstBuild", credentialsId: 'Github'
    
        sh "git rev-parse HEAD > .git/commit-id"
        def commit_id = readFile('.git/commit-id').trim()
        println commit_id
    
        stage "build"
        def app = docker.build "firstBuild"
    
        stage "publish"
        app.push 'master'
        app.push "${commit_id}"
    }
}
